<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:background="@drawable/bg_toolbar_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="70dp"
            android:background="@drawable/bg_toolbar_gradient"
            >


            <!--            Definindo toolbar-->
            <Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_toolbar_gradient"
                android:gravity="center"

                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <FrameLayout
        android:id="@+id/graphic"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/weekButton"
        app:layout_constraintTop_toBottomOf="@id/leftCard"
        android:background="@drawable/bg_card_title">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp"
            android:layout_gravity="center" />
    </FrameLayout>


    <ImageView
        android:id="@+id/circle"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:layout_marginEnd="150dp"
        android:layout_marginStart="150dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_circle"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/toolbarLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/averageWeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/circle"
        app:layout_constraintEnd_toEndOf="@id/circle"
        app:layout_constraintTop_toTopOf="@id/circle"
        app:layout_constraintBottom_toBottomOf="@id/circle"
        android:text="NAkg"
        android:fontFamily="@font/palanquin_bold"
        android:textSize="20sp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/averageWeightTitle"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Average Week Weight"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/palanquin_bold"
        app:layout_constraintTop_toBottomOf="@id/circle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="14dp"/>

    <ImageView
        android:id="@+id/leftCard"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/bg_left_card"
        app:layout_constraintBottom_toTopOf="@id/graphic"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/averageWeightTitle" />

    <ImageView
        android:id="@+id/left_card_text_bg"
        android:layout_height="25dp"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/leftCard"
        app:layout_constraintEnd_toEndOf="@id/leftCard"
        app:layout_constraintTop_toTopOf="@id/leftCard"
        android:background="@drawable/bg_card_title" />

<!--    <ImageView-->
<!--        android:id="@+id/graphic"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_width= "match_parent"-->
<!--        android:layout_marginStart="14dp"-->
<!--        android:layout_marginEnd="14dp"-->
<!--        android:layout_marginTop="10dp"-->
<!--        android:layout_marginBottom="28dp"-->
<!--        app:layout_constraintStart_toStartOf="parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        app:layout_constraintBottom_toTopOf="@+id/buttonEnterData"-->
<!--        app:layout_constraintTop_toBottomOf="@id/leftCard"-->
<!--        android:background="@drawable/bg_card_title" />-->
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Most Recent Body Fat"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/palanquin_semibold"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/left_card_text_bg"
        app:layout_constraintEnd_toEndOf="@+id/left_card_text_bg"
        app:layout_constraintTop_toTopOf="@+id/left_card_text_bg"
        app:layout_constraintBottom_toBottomOf="@+id/left_card_text_bg" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/bfView"
        android:text="NA%"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/palanquin_regular"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/leftCard"
        app:layout_constraintEnd_toEndOf="@+id/leftCard"
        app:layout_constraintTop_toBottomOf="@+id/left_card_text_bg"
        app:layout_constraintBottom_toBottomOf="@id/leftCard" />


    <ImageView
        android:id="@+id/rightCard"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/bg_left_card"
        app:layout_constraintBottom_toBottomOf="@id/leftCard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintTop_toTopOf="@id/leftCard"
         />

    <ImageView
        android:id="@+id/right_card_text_bg"
        android:layout_height="25dp"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@id/rightCard"
        app:layout_constraintEnd_toEndOf="@id/rightCard"
        app:layout_constraintTop_toTopOf="@id/rightCard"
        android:background="@drawable/bg_card_title" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Week Weight Goal"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/palanquin_semibold"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/right_card_text_bg"
        app:layout_constraintEnd_toEndOf="@+id/right_card_text_bg"
        app:layout_constraintTop_toTopOf="@+id/right_card_text_bg"
        app:layout_constraintBottom_toBottomOf="@+id/right_card_text_bg" />
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="NAkg"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:fontFamily="@font/palanquin_regular"
        android:gravity="center_vertical"
        app:layout_constraintStart_toStartOf="@+id/rightCard"
        app:layout_constraintEnd_toEndOf="@+id/rightCard"
        app:layout_constraintTop_toBottomOf="@+id/right_card_text_bg"
        app:layout_constraintBottom_toBottomOf="@id/rightCard" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonEnterData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:fontFamily="@font/palanquin_bold"
        android:text="ENTER DATA"
        android:textSize="20sp"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_button_gradient"

        >

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonDB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/palanquin_bold"
        android:text="DB"
        android:textSize="20sp"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="@+id/buttonEnterData"
        app:layout_constraintTop_toTopOf="@+id/buttonEnterData"
        app:layout_constraintStart_toEndOf="@+id/buttonEnterData"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_button_gradient"

        >

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/weekButton"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/palanquin_bold"
        android:text="WEEK"
        android:textSize="15sp"
        android:textColor="@color/white"

        app:layout_constraintBottom_toTopOf="@+id/buttonEnterData"
        app:layout_constraintTop_toBottomOf="@+id/graphic"
        app:layout_constraintStart_toStartOf="@+id/graphic"
        app:layout_constraintEnd_toStartOf="@id/monthButton"
        android:background="@drawable/bg_button_gradient"

        >

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/monthButton"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:fontFamily="@font/palanquin_bold"
        android:text="MONTH"
        android:layout_marginEnd="3dp"
        android:layout_marginStart="3dp"
        android:textSize="15sp"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="@+id/weekButton"
        app:layout_constraintTop_toTopOf="@+id/weekButton"
        app:layout_constraintStart_toEndOf="@+id/weekButton"
        app:layout_constraintEnd_toStartOf="@+id/yearButton"
        android:background="@drawable/bg_button_gradient"

        >

    </androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/yearButton"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:fontFamily="@font/palanquin_bold"
        android:text="YEAR"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_marginStart="6dp"

        app:layout_constraintBottom_toBottomOf="@+id/weekButton"
        app:layout_constraintTop_toTopOf="@+id/weekButton"
        app:layout_constraintStart_toEndOf="@+id/monthButton"
        app:layout_constraintEnd_toEndOf="@+id/graphic"
        android:background="@drawable/bg_button_gradient">

    </androidx.appcompat.widget.AppCompatButton>

</androidx.constraintlayout.widget.ConstraintLayout>