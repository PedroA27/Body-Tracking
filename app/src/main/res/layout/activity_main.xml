<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_app"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:background="@drawable/bg_toolbar_gradient"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="70dp"
            android:background="@drawable/bg_toolbar_gradient"
            >


<!--            Definindo toolbar-->
            <Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="70dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/bg_toolbar_gradient"
                android:gravity="center"

                />

            <TextView
                android:id="@+id/centerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text= "Add Measures"
                android:textColor="@color/white"
                android:fontFamily="@font/palanquin_bold"
                android:textSize="20sp"
                app:layout_constraintTop_toTopOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="@id/toolbar"
                app:layout_constraintEnd_toEndOf="@id/toolbar"
                app:layout_constraintBottom_toBottomOf="@id/toolbar"
                />

            <ImageView
                android:id="@+id/ic_return"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_return"
                app:layout_constraintTop_toTopOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="@id/toolbar"
                app:layout_constraintEnd_toStartOf="@id/centerText"
                app:layout_constraintBottom_toBottomOf="@id/toolbar"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="200dp"
        android:fontFamily="@font/palanquin_bold"
        android:text="ADD"
        android:textSize="20sp"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/bg_button_gradient"

        >

    </androidx.appcompat.widget.AppCompatButton>
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <ImageView
        android:id="@+id/dataInsert1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"

        android:src="@drawable/data_input"
        app:layout_constraintBottom_toTopOf="@+id/dataInsert2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbarLayout"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/dataInsert2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:src="@drawable/data_input"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dataInsert1"
        app:layout_constraintBottom_toTopOf="@+id/dataInsert3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/dataInsert3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:src="@drawable/data_input"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dataInsert2"
        app:layout_constraintBottom_toTopOf="@+id/dataInsert4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/dataInsert4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:src="@drawable/data_input"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dataInsert3"
        app:layout_constraintBottom_toTopOf="@+id/dataInsert5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/dataInsert5"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:src="@drawable/data_input"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dataInsert4"
        app:layout_constraintBottom_toTopOf="@id/dataInsert6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/dataInsert6"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:src="@drawable/data_input"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/dataInsert5"
        app:layout_constraintBottom_toTopOf="@id/buttonPanel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/insert1Box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_insert_data"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/dataInsert1"
        app:layout_constraintTop_toTopOf="@id/dataInsert1"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert1"/>

    <EditText
        android:id="@+id/insert1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/palanquin_medium"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:hint="Ex: 80kg"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/dataInsert1"
        app:layout_constraintTop_toTopOf="@id/dataInsert1"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert1"/>

    <ImageView
        android:id="@+id/insert2Box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_insert_data"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/dataInsert2"
        app:layout_constraintTop_toTopOf="@id/dataInsert2"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert2"/>

    <EditText
        android:id="@+id/insert2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:hint="Ex: 80cm"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/dataInsert2"
        app:layout_constraintTop_toTopOf="@id/dataInsert2"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert2"/>

    <ImageView
        android:id="@+id/insert3Box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_insert_data"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/dataInsert3"
        app:layout_constraintTop_toTopOf="@id/dataInsert3"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert3"/>

    <EditText
        android:id="@+id/insert3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:hint="Ex: 80cm"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/dataInsert3"
        app:layout_constraintTop_toTopOf="@id/dataInsert3"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert3"/>

    <ImageView
        android:id="@+id/insert4Box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_insert_data"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/dataInsert4"
        app:layout_constraintTop_toTopOf="@id/dataInsert4"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert4"/>

    <EditText
        android:id="@+id/insert4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:hint="Ex: 80cm"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/dataInsert4"
        app:layout_constraintTop_toTopOf="@id/dataInsert4"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert4"/>

    <ImageView
        android:id="@+id/insert5Box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_insert_data"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/dataInsert5"
        app:layout_constraintTop_toTopOf="@id/dataInsert5"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert5"/>

    <EditText
        android:id="@+id/insert5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:hint="Ex: 40cm"
        android:inputType="numberDecimal"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/dataInsert5"
        app:layout_constraintTop_toTopOf="@id/dataInsert5"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert5"/>

    <ImageView
        android:id="@+id/insert6Box"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/bg_insert_data"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/dataInsert6"
        app:layout_constraintTop_toTopOf="@id/dataInsert6"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert6"/>

    <EditText
        android:id="@+id/insert6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:textSize="18sp"
        android:background="@android:color/transparent"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="@id/dataInsert6"
        app:layout_constraintTop_toTopOf="@id/dataInsert6"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert6"/>

    <TextView
        android:id="@+id/weightText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Weight"
        android:textColor="@color/white"
        android:fontFamily="@font/palanquin_semibold"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="@id/dataInsert1"
        app:layout_constraintStart_toStartOf="@id/dataInsert1"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert1"
        />

    <TextView
        android:id="@+id/upperWaistText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Upper Waist"
        android:textColor="@color/white"
        android:fontFamily="@font/palanquin_semibold"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="@id/dataInsert2"
        app:layout_constraintStart_toStartOf="@id/dataInsert2"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert2"
        />

    <TextView
        android:id="@+id/midWaistText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Mid Waist"
        android:textColor="@color/white"
        android:fontFamily="@font/palanquin_semibold"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="@id/dataInsert3"
        app:layout_constraintStart_toStartOf="@id/dataInsert3"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert3"
        />

    <TextView
        android:id="@+id/lowerWaistText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Lower Waist"
        android:textColor="@color/white"
        android:fontFamily="@font/palanquin_semibold"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="@id/dataInsert4"
        app:layout_constraintStart_toStartOf="@id/dataInsert4"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert4"
        />

    <TextView
        android:id="@+id/neckText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Neck"
        android:textColor="@color/white"
        android:fontFamily="@font/palanquin_semibold"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="@id/dataInsert5"
        app:layout_constraintStart_toStartOf="@id/dataInsert5"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert5"
        />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= "Date"
        android:textColor="@color/white"
        android:fontFamily="@font/palanquin_semibold"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:layout_marginStart="2dp"
        app:layout_constraintTop_toTopOf="@id/dataInsert6"
        app:layout_constraintStart_toStartOf="@id/dataInsert6"
        app:layout_constraintEnd_toEndOf="@id/guideline"
        app:layout_constraintBottom_toBottomOf="@id/dataInsert6"
        />



</androidx.constraintlayout.widget.ConstraintLayout>